{
  "framework": "nextjs",
  "buildCommand": "cd conversai && npm install && npm run build",
  "outputDirectory": "conversai/.next",
  "installCommand": "cd conversai && npm install",
  "devCommand": "cd conversai && npm run dev",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_ENV": "production",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "conversai/src/app/api/voice/process/route.ts": {
      "maxDuration": 30
    },
    "conversai/src/app/api/voice/process-fact-based/route.ts": {
      "maxDuration": 30
    },
    "conversai/src/app/api/voice/process-claude/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}